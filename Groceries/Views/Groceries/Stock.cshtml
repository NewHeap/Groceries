@using GroceriesTool.DAL.Models
@model List<Groceries>
@{ 
    ViewBag.Title = "Stocks";
}
<style>
    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
</style>
<h4>Stock</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <table class="table table-striped">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Product</td>
                    <td>Stock</td>
                </tr>
            </thead> 
            @foreach (var item in Model)
            {
            
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Product</td>
                    <td><input class="stockValue" type="number" value="@item.Stock" style="width:30px;" /></td>
                    <td><button class="buttonUp"><span class="glyphicon glyphicon-menu-up"></span></button><button class="buttonDown"><span class="glyphicon glyphicon-menu-down"></span></button> </td>
                </tr>
            }
        </table>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section scripts {
<script type="text/javascript">
    $(document).ready(function () {
            $(".buttonUp").on("click", function () {

                $(this).parent().parent().find(".stockValue").val(function (i, oldval) {
                    return ++oldval;
                });

                saveChanges();
            });
            $(".buttonDown").on("click", function () {
                $(this).parent().parent().find(".stockValue").val(function (i, oldval) {
                    return --oldval;
                });

            });
            $('#counter').val(function (i, oldval) {
                return ++oldval;
            });

            var saveChanges = function (body) {
                $.ajax({
                        body: body,
                        type: "POST",
                        url: '@Url.Action("Stock")',
                        success: function (body) {
                           alert("Data has been added successfully.(finaly)");
                            LoadData();
                        },
                        error: function () {
                            alert("Error while inserting data U FOOL.");
                        }
                    });
            }
    });
</script>
}